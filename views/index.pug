extends layout

block content 
  span
  div
 



    <br>
     h1(style='text-align: left') Books
        form(method='post' action=`/books/book.title`)
            input( name='search' type='text' placeholder="Type a book..." id= title) 
            input(style="display: flex" type='submit' value='Search')

        


  p(style='text-align:center;')
    a(class="button" href=`/books/new`) Create New Book



  table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year
    tbody 
      each book in books
        tr 
          td
            a(href=`/books/${book.id}`)= book.title 
          td= book.author
          td= book.genre
          td= book.year